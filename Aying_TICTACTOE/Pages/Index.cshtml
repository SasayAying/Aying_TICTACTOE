@page
@model IndexModel
@{
    ViewData["Title"] = "Tic-Tac-Toe";
}

<div class="text-center">
    <h1 class="display-4">Tic-Tac-Toe</h1>
    <div>
        <button id="single-player-btn" class="btn btn-primary" onclick="setSinglePlayer()">Single Player</button>
        <button id="multiplayer-btn" class="btn btn-secondary" onclick="setMultiplayer()">Multiplayer</button>
    </div>
    <div id="game-board" class="board">
        @for (int i = 0; i < 9; i++)
        {
            <button id="cell-@i" class="cell" onclick="makeMove(@i)"></button>
        }
    </div>
    <div id="scoreboard" class="mt-3">
        <p>Player X Wins: <span id="x-wins">0</span></p>
        <p>Player O Wins: <span id="o-wins">0</span></p>
        <p>Draws: <span id="draws">0</span></p>
    </div>
    <button id="restart-btn" class="btn btn-danger mt-3" onclick="resetGame()">Restart Game</button>
    <div id="game-over-message" class="mt-3"></div>
</div>

<script src="~/js/site.js"></script>